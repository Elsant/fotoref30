<meta charset='<%= Rails.application.config.encoding %>' />
<meta content="width=device-width, initial-scale=1.0" name="viewport" />
<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
<meta content="SiteName" name="keywords" />

<title><%= browser_title(yield(:title)) %></title>

<% if @meta.meta_description.present? -%>
  <%= raw %(<meta name="description" content="#{@meta.meta_description}" />) -%>
<% else -%>
  <meta content='ФОТО - сайт про ....' name='description' /> 
<% end -%>

<%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
<%= raw %(<link rel="canonical" href="#{request.protocol}#{request.host_with_port}#{@canonical}" />) if @canonical.present? -%>
<%= csrf_meta_tags if Refinery::Core.authenticity_token_on_frontend -%>
<%= yield :meta %>

<%= stylesheet_link_tag "application" %>
<%= yield :stylesheets %>

<%= render '/refinery/google_analytics' %>

<%= javascript_include_tag 'modernizr-min' %>
